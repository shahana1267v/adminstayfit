<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

<!--    Used in center Info-->
    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
    </style>

    <style name="IconButton.Danger">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Danger</item>
    </style>
    <style name="ThemeOverlay.Danger" parent="">
        <item name="colorPrimary">@color/colorDanger</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
    </style>

    <style name="IconButton.Success">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Success</item>
    </style>
    <style name="ThemeOverlay.Success" parent="">
        <item name="colorPrimary">@color/colorSuccess</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
    </style>

    <style name="IconButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Primary</item>
    </style>
    <style name="ThemeOverlay.Primary" parent="">
        <item name="colorPrimary">@color/colorInfo</item>
        <item name="colorOnPrimary">@color/colorInfoLight</item>
    </style>


<!--    Filter Button : button -->

    <style name="TextAppearance.App.FilterButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ShapeAppearance.App.FilterButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="FilterButton" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.FilterButton</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.FilterButton</item>
    </style>

    <style name="FilterButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Filter.Primary</item>
    </style>



    <style name="ThemeOverlay.App.Button.Filter.Primary"  parent="Widget.MaterialComponents.Button">
        <item name="colorOnPrimary">@color/white</item>
        <item name="strokeColor">@color/greyColorLight</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:outlineProvider">none</item>
    </style>

<!--    Large Rounded buttons -->

    <style name="TextAppearance.App.LargeRoundButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ShapeAppearance.App.LargeRoundButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearance.App.LargeRoundButton.Round" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="Button.Default" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="iconTint">@color/black</item>
        <item name="textAppearanceButton">@style/TextAppearance.StayFit.bodyMedium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@color/greyColorLight</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="Button.Default.Inverse" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@color/greyColorLight</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorInfoDarker</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/colorInfoDarker</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:outlineProvider">none</item>
    </style>
    <style name="Button.Text.Cancel">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/colorInfoDarker</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/black</item>
        <item name="corner_radius">@dimen/element_spacing</item>
        <item name="strokeColor">@color/greyColorDark</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Button.Default.Full" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@color/greyColor</item>
        <item name="cornerRadius">@dimen/tab_spacing</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:outlineProvider">none</item>
    </style>


    <style name="ThemeOverlay.App.Button.Primary" parent="">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:elevation">@dimen/element_spacing</item>
        <item name="corner_radius">30dp</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="ThemeOverlay.App.Button.Tertiary" parent="">
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.Button.Inverse" parent="">
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="ThemeOverlay.App.Button.Inverse.Danger" parent="">
        <item name="colorPrimary">@color/colorDangerLight</item>
        <item name="colorOnPrimary">@color/colorDangerDark</item>
    </style>
    
    <style name="LargeRoundButton" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.LargeRoundButton</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeRoundButton</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">50dp</item>
    </style>



    <style name="LargeRoundButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Primary</item>
    </style>

    <style name="LargeRoundButton.Tertiary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Tertiary</item>
    </style>

    <style name="LargeRoundButton.Inverse">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Inverse</item>
    </style>

    <style name="LargeRoundButton.Round">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Inverse</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeRoundButton.Round</item>
    </style>

    <style name="LargeRoundButton.Inverse.Danger">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Inverse.Danger</item>
    </style>

